.scroll {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6%;

  &:hover {
    color: $orange;

    & .scroll__icon {
      background: svg-load('scroll.svg', fill=$orange, width=100%, height=100%) center center no-repeat;
    }
  }
}

.scroll__text {
  margin-right: 20px;
}

.scroll__icon {
  width: 20px;
  height: 30px;
  background: svg-load('scroll.svg', fill=#fff, width=100%, height=100%) center center no-repeat;

  
}