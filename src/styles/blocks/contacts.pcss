.contacts {
  padding: 7% 0;

  @include desktop {
    padding: 10% 0;
  }

  @include phones {
    padding: 25% 0;
  }
}

.contacts__title {
  margin-bottom: 90px;

  @include tablets {
    text-align: center;
    margin-bottom: 55px;
  }
}

.contacts__form {
  width: 60%;

  @include tablets {
    width: 100%;
  }
}